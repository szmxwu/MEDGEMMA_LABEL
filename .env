# DICOM Server Configuration
PACS_IP=172.17.250.192
PACS_PORT=2104
CALLING_AET=WMX01
CALLED_AET=pacsFIR
CALLING_PORT=1103

# Download/processing backpressure and worker tuning
# When disk usage in results directory reaches DOWNLOAD_HIGH_WATERMARK_GB (GB),
# downloads will pause until usage falls below DOWNLOAD_LOW_WATERMARK_GB (GB).
DOWNLOAD_HIGH_WATERMARK_GB=45
DOWNLOAD_LOW_WATERMARK_GB=40
# Max number of pending series kept in memory/queue before download blocks
MAX_PENDING_SERIES=4
# Number of concurrent converter workers processing downloaded series
NUM_CONVERTERS=2

# Cleanup thresholds for results directory (GB)
# CLEANUP_THRESHOLD_GB: when results dir exceeds this, automatic cleanup triggers
# CLEANUP_TARGET_GB: cleanup aims to reduce usage below this value
CLEANUP_THRESHOLD_GB=50
CLEANUP_TARGET_GB=40

# =============================================================================
# Quality Control (QC) Thresholds by Modality
# =============================================================================
# Format: QC_{MODALITY}_{THRESHOLD_NAME}
# Use 'DEFAULT' for default values applied to all modalities
# Use specific modality codes: CT, MR, DX, DR, MG, CR, etc.
# =============================================================================

# Dynamic range minimum threshold (pixels must have at least this range)
QC_DEFAULT_DYNAMIC_RANGE_MIN=20
QC_CT_DYNAMIC_RANGE_MIN=20
QC_MR_DYNAMIC_RANGE_MIN=15
QC_DX_DYNAMIC_RANGE_MIN=10
QC_DR_DYNAMIC_RANGE_MIN=10
QC_MG_DYNAMIC_RANGE_MIN=10
QC_CR_DYNAMIC_RANGE_MIN=10

# Standard deviation minimum threshold (contrast measure)
QC_DEFAULT_STD_MIN=5
QC_CT_STD_MIN=5
QC_MR_STD_MIN=5
QC_DX_STD_MIN=3
QC_DR_STD_MIN=3
QC_MG_STD_MIN=3
QC_CR_STD_MIN=3

# Unique pixel value ratio minimum (complexity measure)
# X-ray images (DX/DR/MG/CR) typically have lower unique ratios than CT/MR
QC_DEFAULT_UNIQUE_RATIO_MIN=0.01
QC_CT_UNIQUE_RATIO_MIN=0.01
QC_MR_UNIQUE_RATIO_MIN=0.008
QC_DX_UNIQUE_RATIO_MIN=0.001
QC_DR_UNIQUE_RATIO_MIN=0.001
QC_MG_UNIQUE_RATIO_MIN=0.001
QC_CR_UNIQUE_RATIO_MIN=0.001

# Exposure detection thresholds
QC_DEFAULT_LOW_RATIO_THRESHOLD=0.6
QC_DEFAULT_HIGH_RATIO_THRESHOLD=0.6

# Percentiles for calculating dynamic range (2-98 is standard)
QC_DEFAULT_PERCENTILE_LOW=2
QC_DEFAULT_PERCENTILE_HIGH=98

# Low quality ratio threshold for series (if > this ratio of files are low quality, mark series as low)
QC_DEFAULT_SERIES_LOW_QUALITY_RATIO=0.3
